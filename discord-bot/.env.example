# Environment Configuration
# Copy this file to .env and fill in your values

# Discord Bot Token (required)
# Get this from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Discord Application ID (required)
# Get this from https://discord.com/developers/applications
DISCORD_CLIENT_ID=your_discord_client_id_here

# Discord Guild/Server ID (optional - for development, commands register faster to a specific guild)
DISCORD_GUILD_ID=your_discord_guild_id_here

# Role ID required to use whitelist commands (optional)
# Leave empty to allow all users
DISCORD_ADMIN_ROLE_ID=

# Path to the whitelist.sqf file
# This can be a local path or a path on your Pterodactyl server
WHITELIST_FILE_PATH=../@Apex_cfg/whitelist.sqf

# Pterodactyl Panel Configuration (optional)
# Required if you want to manage whitelists on a remote Pterodactyl server
PTERODACTYL_PANEL_URL=https://panel.example.com
PTERODACTYL_API_KEY=your_pterodactyl_api_key_here
PTERODACTYL_SERVER_ID=your_server_uuid_here

# Path to whitelist.sqf on the Pterodactyl server (relative to server root)
PTERODACTYL_WHITELIST_PATH=@Apex_cfg/whitelist.sqf
